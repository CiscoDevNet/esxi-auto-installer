{% extends 'base.html' %}

{% block metarefresh %}
  <meta http-equiv="refresh" content="5"/>
{% endblock %}

{% block content %}
  <div class="content_section">
    <h1>Server status</h1>
    <table>
        <tr style="font-weight:bold;background-color:#D8DBE2">
            <td width="200px"> Hostname </td>
            <td width="150px"> CIMC IP address </td>
            <td width="250px"> Start Time </td>
            <td width="250px"> Finish Time </td>
            <td width="250px"> Status </td>
        </tr>
        {% for row in eaidb %}
        <tr>
            <td><a href="{{ url_for('logs', jobid=row[5] ) }}">{{ row[0] }}</a></td>
            <td>{{ row[1] }}</td>
            <td>{{ row[2] }}</td>
            <td>{{ row[3] }}</td>
            <td>{{ row[4] }}</td>
        </tr>
        {% endfor %}
    </table>
  </div>
  <div class="content_section">
    <a href="{{ url_for('autoinstaller_gui') }}">Back to the main page</a>
  </div>
{% endblock %}
